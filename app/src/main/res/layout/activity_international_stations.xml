<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_international_stations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tarek.newradio.InternationalStations"
    android:background="@drawable/imagess">
    <android.support.v7.widget.Toolbar
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/holo_orange_dark" />
    <Button
        android:id="@+id/back"
        android:gravity="left|center_vertical|center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        android:layout_marginBottom="8dp"
        android:background="@drawable/back"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="35dp"
        android:layout_height="35dp" />

    <TextView
        android:text="International Stations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_product"
        app:layout_constraintRight_toRightOf="@+id/toolbar"
        app:layout_constraintLeft_toLeftOf="@+id/back"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/imageView3"
        app:layout_constraintLeft_toRightOf="@+id/txt_product"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintRight_toRightOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/txt_product"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintVertical_bias="0.81"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:background="@drawable/radioo" />

    <ListView
        android:layout_width="0dp"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:id="@+id/ListView" />


</android.support.constraint.ConstraintLayout>
