<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tarek.newradio.MainActivity"
    android:background="@drawable/images">

    <ImageView
        app:srcCompat="@drawable/radioicon"
        android:id="@+id/imageView"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="150dp"
        android:layout_width="150dp" />

    <Button
        android:text="Local"
        android:id="@+id/localStations"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/mauriti"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="International"
        android:id="@+id/interStations"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/world"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/localStations"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintHorizontal_bias="0.11"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="110dp" />
</android.support.constraint.ConstraintLayout>
